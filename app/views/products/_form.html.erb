<%= render partial: 'layouts/navigation' %>

<%= form_with(model: product, local: true, html: { class: "basic-grey"}) do |form| %>
  <% if product.errors.any? %>
      <% product.errors.full_messages.each do |message| %>
        <script>
          $.notify( {message: '<%= message %>'}, { type: 'danger', offset: 80});
        </script>
      <% end %>
  <% end %>
  <form>
    <div class="form-row">
      <div class="col-md-2 mb-5">
        <%= form.label :code, class:"label" %>
        <%= form.text_field :code, class:"form-control"%>
      </div>
      <div class="col-md-6 mb-5">
        <%= form.label :name, class:"label" %>
        <%= form.text_field :name, class:"form-control"%>
      </div>
      <div class="col-md-2 mb-5">
        <%= form.label :cost, class:"label" %>
        <%= form.text_field :cost, class:"form-control"%>
      </div>
      <div class="col-md-2 mb-5">
        <%= form.label :margin, class:"label" %>
        <%= form.text_field :margin, class:"form-control"%>
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-1 mb-10">
      <%= form.submit t('buttons.save'), class:"btn btn-primary"%>
      </div>
      <div class="col-md-1 mb-10">
      <%= link_to t('buttons.back'), products_path, class:"btn btn-secondary" %>
      </div>
    </div>
  </form>
<% end %>
</div>
</div>
</div>

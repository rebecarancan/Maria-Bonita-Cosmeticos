<%= render partial: 'layouts/navigation' %>

<%= form_with(model: [:accounting, master_order], local: true, html: { class: "basic-grey"}) do |form| %>
  <% if master_order.errors.any? %>
      <% master_order.errors.full_messages.each do |message| %>
        <script>
          $.notify( {message: '<%= message %>'}, { type: 'danger', offset: 80});
        </script>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-row">
      <div class="col-md-2 mb-10">
        <%= form.label :year, class:"label" %>
        <%= form.text_field :year, class:"form-control" %>
      </div>

      <div class="col-md-2 mb-10">
        <%= form.label :month, class:"label" %>
        <%= form.select :month, options_for_month(@master_order.month), class:"form-control" %>
      </div>
    </div>

    <br><br>

    <div id='orders'>
      <%= form.fields_for :orders do |orders_fields| %>
        <%= render 'order_fields', f: orders_fields %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association('+', form, :orders, class: "badge badge-pill badge-secondary", style: "background: #a53838") %>
      </div>
    </div>

    <br><br><br>

    <div class="form-row">
      <div class="col-md-1 mb-10">
        <%= form.submit t('buttons.save'), class:"btn btn-primary" %>
      </div>
      <div class="col-md-1 mb-10">
        <%= link_to t('buttons.back'), accounting_master_orders_path, class:"btn btn-secondary"%>
      </div>
    </div>
  </form>
<% end %>

<br>

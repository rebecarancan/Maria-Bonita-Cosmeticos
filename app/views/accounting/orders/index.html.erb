<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Purchase</th>
      <th>Distributor</th>
      <th>Expire</th>
      <th>Value</th>
      <th>Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.purchase %></td>
        <td><%= order.distributor %></td>
        <td><%= order.expire %></td>
        <td><%= order.value %></td>
        <td><%= order.payment %></td>
        <td><%= link_to 'Show', accounting_order %></td>
        <td><%= link_to 'Edit', edit_accounting_order_path(accounting_order) %></td>
        <td><%= link_to 'Destroy', accounting_order_path(order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


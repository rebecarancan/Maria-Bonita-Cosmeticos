<div class="nested-fields">

  <div class="form-row">
    <div class="col-md-2 mb-3">
      <div class="field">
        <%= f.label :day, class:"label" %>
        <%= f.text_field :day, class: "form-control datepicker" %>
      </div>
    </div>

    <div class="col-md-2 mb-3">
      <div class="field">
        <%= f.label :name, class:"label" %>
        <%= f.select :name, options_for_distributor(@master_note.notes.map(&:name)) %>
      </div>
    </div>

    <div class="col-md-2 mb-3">
      <div class="field">
        <%= f.label :value, class:"label" %>
        <%= f.text_field :value %>
      </div>
    </div>

    <div class="col-md-1 mb-3">
      <%= link_to_remove_association("x", f, class: "badge badge-pill badge-secondary", style: "background: #a53838") %>
    </div>
  </div>

</div>

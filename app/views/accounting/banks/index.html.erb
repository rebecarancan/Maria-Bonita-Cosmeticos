<p id="notice"><%= notice %></p>

<h1>Banks</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Value</th>
      <th>Income type</th>
      <th>Record type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.day %></td>
        <td><%= bank.value %></td>
        <td><%= bank.income_type %></td>
        <td><%= bank.record_type %></td>
        <td><%= link_to 'Edit', edit_accounting_bank_path(bank) %></td>
        <td><%= link_to 'Destroy', accounting_bank_path(bank), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


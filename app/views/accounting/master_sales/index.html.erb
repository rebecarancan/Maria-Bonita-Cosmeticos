<p id="notice"><%= notice %></p>

<h1>Master Sales</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Month</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @master_sales.each do |master_sale| %>
      <tr>
        <td><%= master_sale.year %></td>
        <td><%= master_sale.month %></td>
        <td><%= master_sale.balance %></td>
        <td><%= link_to 'Show', accounting_master_sale_path(master_sale) %></td>
        <td><%= link_to 'Edit', edit_accounting_master_sale_path(master_sale) %></td>
        <td><%= link_to 'Destroy', accounting_master_sale_path(master_sale), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


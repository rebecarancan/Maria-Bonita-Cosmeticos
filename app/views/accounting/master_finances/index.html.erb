<%= render partial: 'layouts/notifications' %>

<%= render partial: 'layouts/navigation' %>

<br><br><br>

<p class="basic-title"><%= t('accounting.finance') %></p>

<div class="form-row" style="margin-left: 25px">
  <div class="col-md-1 mb-10">
    <%= link_to t('buttons.back'), accounting_path, class:"btn btn-secondary"%>
  </div>
    <%= link_to t('buttons.new'), new_accounting_master_finance_path, class:"btn btn-primary butt-align2"%>
</div>

<div class="container-table100">
  <div class="wrap-table100">
    <div class="table100">
      <table>
        <thead>
          <tr class="table100-head">
            <th class="column1"><%= t('labels.date') %></th>
            <th class="column5"><%= t('buttons.show') %></th>
            <th class="column5"><%= t('buttons.edit') %></th>
            <th class="column5"><%= t('buttons.destroy') %></th>
          </tr>
        </thead>

        <tbody>
          <% @master_finances.each do |master_finance| %>
            <tr>
              <td class="column1"><%= l(master_finance.date, format: :short) %></td>
              <td class="column5">
                <%= link_to accounting_master_finance_path(master_finance) do %>
                  <span class="typcn typcn-th-list basic-color"></span>
                <% end %>
              </td>
              <td class="column5">
                <%= link_to edit_accounting_master_finance_path(master_finance) do %>
                  <span class="typcn typcn-pencil basic-color"></span>
                <% end %>
              </td>
              <td class="column5">
                <%= link_to accounting_master_finance_path(master_finance), method: :delete, data: { confirm: t('messages.confirm_with', date: l(master_finance.date, format: :short))} do %>
                  <span class="typcn typcn-times basic-color"></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @master_finances %>
</div>

<br>

<p class="basic-title2">Entrar</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "basic-grey2"}) do |f| %>
  <div class="form-row">
    <div class="col-md-12 mb-2">
      <%= f.label :email, class:"label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="col-md-5 mb-2">
      <%= f.label :password, class:"label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="col-md-5 mb-2">
      <div class="actions">
        <%= f.submit "Entrar", class:"btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
